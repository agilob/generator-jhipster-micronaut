FROM oracle/graalvm-ce:20.2.0-java11 as graalvm
RUN gu install native-image

COPY . /home/app/myapp
WORKDIR /home/app/myapp

<% if (buildTool === 'maven') { %>
RUN native-image -cp target/*.jar
<% } %>
<% if (buildTool === 'gradle') { %>
RUN native-image -cp build/libs/*-all.jar
<% } %>

FROM frolvlad/alpine-glibc
RUN apk update && apk add libstdc++
EXPOSE 8080
COPY --from=graalvm /home/app/myapp/<%= dasherizedBaseName %> /app/<%= dasherizedBaseName %>
ENTRYPOINT ["/app/<%= dasherizedBaseName %>"]
